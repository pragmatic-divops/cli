{
  "name": "@pragmatic-divops/cli",
  "description": "cli for various organization tools",
  "license": "MIT",
  "version": "0.0.0-semantically-released",
  "type": "module",
  "author": "Matt Travi <npm@travi.org> (https://matt.travi.org/)",
  "repository": "pragmatic-divops/cli",
  "bugs": "https://github.com/pragmatic-divops/cli/issues",
  "homepage": "https://npm.im/@pragmatic-divops/cli",
  "bin": {
    "pragmatic-divops": "./bin/pragmatic-divops.js"
  },
  "scripts": {
    "pretest": "run-s build",
    "test": "npm-run-all --print-label --parallel lint:* --parallel test:*",
    "lint:lockfile": "lockfile-lint",
    "lint:js": "eslint . --cache",
    "lint:md": "remark . --frail",
    "generate:md": "remark . --output",
    "lint:sensitive": "ban",
    "clean": "rimraf ./bin",
    "prebuild": "run-s clean",
    "build": "npm-run-all --print-label --parallel build:*",
    "build:js": "rollup --config",
    "watch": "run-s 'build:js -- --watch'",
    "prepack": "run-s build",
    "test:unit": "cross-env NODE_ENV=test c8 run-s test:unit:base",
    "test:unit:base": "DEBUG=any vitest run",
    "lint:peer": "npm ls >/dev/null",
    "lint:gherkin": "gherkin-lint",
    "test:integration": "run-s 'test:integration:base -- --profile noWip'",
    "test:integration:base": "NODE_OPTIONS=--enable-source-maps DEBUG=any cucumber-js test/integration",
    "test:integration:debug": "DEBUG=test run-s test:integration",
    "test:integration:wip": "run-s 'test:integration:base -- --profile wip'",
    "test:integration:wip:debug": "DEBUG=test run-s 'test:integration:wip'",
    "test:integration:focus": "run-s 'test:integration:base -- --profile focus'",
    "pretest:e2e": "run-s build",
    "test:e2e": "node ./test/e2e/smoke-test.mjs",
    "prepare": "husky install",
    "lint:js:fix": "run-s 'lint:js -- --fix'",
    "lint:publish": "publint --strict"
  },
  "files": [
    "bin/"
  ],
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "packageManager": "npm@11.7.0+sha512.c22099a6fff8d5b2286c2a09df5352b4858a7c0c716320f58989d60ad8b29ecf2ce6fdfe97ccb41c23ffb1272e1fa079f868487dd6b81d02a2a9e199c095a117",
  "dependencies": {
    "@form8ion/cli-core": "1.1.0",
    "@form8ion/codecov": "6.2.0",
    "@form8ion/core": "4.11.0",
    "@form8ion/cucumber-scaffolder": "5.1.0",
    "@form8ion/eslint-config-extender": "10.0.3",
    "@form8ion/gatsby": "1.0.3",
    "@form8ion/github": "3.0.0",
    "@form8ion/github-actions-node-ci": "5.0.2",
    "@form8ion/github-core": "1.1.3",
    "@form8ion/javascript": "14.6.0",
    "@form8ion/javascript-core": "12.4.0",
    "@form8ion/lift": "11.0.0",
    "@form8ion/mocha-scaffolder": "6.1.1",
    "@form8ion/project": "21.1.0",
    "@form8ion/renovate-scaffolder": "3.0.0",
    "@travi/netlify-scaffolder": "1.6.0",
    "update-notifier": "7.3.1",
    "yargs": "17.7.2"
  },
  "devDependencies": {
    "@cucumber/cucumber": "12.4.0",
    "@form8ion/config-file": "1.3.0",
    "@form8ion/eslint-config-vitest": "1.0.0",
    "@pragmatic-divops/commitlint-config": "1.0.69",
    "@pragmatic-divops/eslint-config": "1.0.97",
    "@pragmatic-divops/eslint-config-cucumber": "1.0.1",
    "@pragmatic-divops/remark-preset": "4.0.8",
    "@rollup/plugin-json": "6.1.0",
    "@rollup/plugin-node-resolve": "16.0.3",
    "@travi/any": "3.1.3",
    "ban-sensitive-files": "1.10.11",
    "c8": "10.1.3",
    "chai": "6.2.1",
    "cross-env": "10.1.0",
    "cz-conventional-changelog": "3.3.0",
    "deep-equal": "2.2.3",
    "execa": "9.6.1",
    "gherkin-lint": "4.2.4",
    "http-status-codes": "2.3.0",
    "husky": "9.1.7",
    "lockfile-lint": "4.14.1",
    "mock-fs": "5.5.0",
    "msw": "2.12.4",
    "npm-run-all2": "8.0.4",
    "publint": "0.3.16",
    "remark-cli": "12.0.1",
    "remark-toc": "9.0.0",
    "rimraf": "6.1.2",
    "rollup": "4.53.5",
    "rollup-plugin-auto-external": "2.0.0",
    "rollup-plugin-executable": "1.6.3",
    "testdouble": "3.20.2",
    "vitest": "4.0.16",
    "vitest-when": "0.10.0"
  }
}
