{
  "name": "@pragmatic-divops/cli",
  "description": "cli for various organization tools",
  "license": "MIT",
  "version": "0.0.0-semantically-released",
  "type": "module",
  "author": "Matt Travi <npm@travi.org> (https://matt.travi.org/)",
  "repository": "pragmatic-divops/cli",
  "bugs": "https://github.com/pragmatic-divops/cli/issues",
  "homepage": "https://github.com/pragmatic-divops/cli#readme",
  "bin": {
    "pragmatic-divops": "./bin/pragmatic-divops.js"
  },
  "scripts": {
    "test": "npm-run-all --print-label --parallel lint:* --parallel test:*",
    "lint:lockfile": "lockfile-lint --path package-lock.json --type npm --validate-https --allowed-hosts npm",
    "lint:js": "eslint . --cache",
    "lint:md": "remark . --frail",
    "generate:md": "remark . --output",
    "lint:sensitive": "ban",
    "clean": "rimraf ./bin",
    "prebuild": "run-s clean",
    "build": "npm-run-all --print-label --parallel build:*",
    "build:js": "rollup --config",
    "watch": "run-s 'build:js -- --watch'",
    "prepack": "run-s build",
    "test:unit": "cross-env NODE_ENV=test c8 run-s test:unit:base",
    "test:unit:base": "DEBUG=any vitest run",
    "lint:peer": "npm ls >/dev/null",
    "lint:gherkin": "gherkin-lint",
    "test:integration": "run-s 'test:integration:base -- --profile noWip'",
    "test:integration:base": "NODE_OPTIONS=\"--loader=testdouble --enable-source-maps $NODE_OPTIONS\" DEBUG=any cucumber-js test/integration",
    "test:integration:debug": "DEBUG=test run-s test:integration",
    "test:integration:wip": "run-s 'test:integration:base -- --profile wip'",
    "test:integration:wip:debug": "DEBUG=test run-s 'test:integration:wip'",
    "test:integration:focus": "run-s 'test:integration:base -- --profile focus'",
    "pretest:e2e": "run-s build",
    "test:e2e": "node ./test/e2e/smoke-test.mjs",
    "prepare": "husky install"
  },
  "files": [
    "bin/"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@form8ion/codecov": "5.3.0",
    "@form8ion/cucumber-scaffolder": "4.0.0",
    "@form8ion/eslint-config-extender": "8.1.2",
    "@form8ion/gatsby": "1.0.3",
    "@form8ion/github-actions-node-ci": "4.0.2",
    "@form8ion/javascript": "12.2.0",
    "@form8ion/javascript-core": "11.0.0",
    "@form8ion/lift": "9.1.3",
    "@form8ion/mocha-scaffolder": "5.0.1",
    "@form8ion/project": "18.1.5",
    "@form8ion/renovate-scaffolder": "2.1.0",
    "@travi/github-scaffolder": "10.0.1",
    "@travi/netlify-scaffolder": "1.6.0",
    "update-notifier": "7.0.0",
    "yargs": "17.7.2"
  },
  "devDependencies": {
    "@babel/register": "7.23.7",
    "@cucumber/cucumber": "10.3.1",
    "@form8ion/core": "4.2.1",
    "@pragmatic-divops/commitlint-config": "1.0.56",
    "@pragmatic-divops/eslint-config": "1.0.92",
    "@pragmatic-divops/eslint-config-cucumber": "1.0.1",
    "@pragmatic-divops/remark-preset": "4.0.3",
    "@rollup/plugin-node-resolve": "15.2.3",
    "@travi/any": "3.1.0",
    "@travi/babel-preset": "3.0.119",
    "ban-sensitive-files": "1.10.1",
    "c8": "9.1.0",
    "chai": "5.1.0",
    "cross-env": "7.0.3",
    "cz-conventional-changelog": "3.3.0",
    "execa": "8.0.1",
    "gherkin-lint": "4.2.4",
    "http-status-codes": "2.3.0",
    "husky": "9.0.11",
    "jest-when": "3.6.0",
    "lockfile-lint": "4.13.2",
    "mock-fs": "5.2.0",
    "nock": "13.5.3",
    "npm-run-all2": "6.1.2",
    "remark-cli": "12.0.0",
    "remark-toc": "9.0.0",
    "rimraf": "5.0.5",
    "rollup": "4.12.0",
    "rollup-plugin-auto-external": "2.0.0",
    "rollup-plugin-executable": "1.6.3",
    "rollup-plugin-json": "4.0.0",
    "testdouble": "3.20.1",
    "vitest": "1.3.1"
  }
}
