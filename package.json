{
  "name": "@pragmatic-divops/cli",
  "description": "cli for various organization tools",
  "license": "MIT",
  "version": "0.0.0-semantically-released",
  "bin": {
    "pragmatic-divops": "bin/pragmatic-divops.js"
  },
  "files": [
    "bin/"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": "pragmatic-divops/cli",
  "bugs": "https://github.com/pragmatic-divops/cli/issues",
  "homepage": "https://github.com/pragmatic-divops/cli#readme",
  "author": "Matt Travi <npm@travi.org> (https://matt.travi.org/)",
  "scripts": {
    "test": "npm-run-all --print-label --parallel lint:* --parallel test:*",
    "lint:lockfile": "lockfile-lint --path package-lock.json --type npm --validate-https --allowed-hosts npm",
    "lint:js": "eslint . --cache",
    "lint:md": "remark . --frail",
    "generate:md": "remark . --output",
    "lint:sensitive": "ban",
    "clean": "rimraf ./bin",
    "prebuild": "run-s clean",
    "build": "npm-run-all --print-label --parallel build:*",
    "build:js": "rollup --config",
    "watch": "run-s 'build:js -- --watch'",
    "prepack": "run-s build",
    "test:unit": "nyc run-s test:unit:base",
    "coverage:report": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "test:unit:base": "DEBUG=any mocha 'src/**/*-test.js'",
    "lint:peer": "npm ls >/dev/null",
    "lint:gherkin": "gherkin-lint",
    "test:integration": "run-s 'test:integration:base -- --profile noWip'",
    "test:integration:base": "DEBUG=any cucumber-js test/integration --profile base",
    "test:integration:debug": "DEBUG=test run-s test:integration",
    "test:integration:wip": "run-s 'test:integration:base -- --profile wip'",
    "test:integration:wip:debug": "DEBUG=test run-s 'test:integration:wip'",
    "test:integration:focus": "run-s 'test:integration:base -- --profile focus'",
    "prepare": "husky install"
  },
  "dependencies": {
    "@form8ion/eslint-config-extender": "1.1.10",
    "@form8ion/gatsby": "1.0.0",
    "@form8ion/github-actions-node-ci": "1.13.6",
    "@form8ion/javascript-core": "2.10.1",
    "@form8ion/mocha-scaffolder": "1.1.0",
    "@form8ion/project": "11.0.1",
    "@form8ion/renovate-scaffolder": "1.5.0",
    "@travi/github-scaffolder": "6.0.0",
    "@travi/javascript-scaffolder": "13.6.1",
    "@travi/netlify-scaffolder": "1.6.0",
    "source-map-support": "0.5.19",
    "update-notifier": "5.1.0",
    "yargs": "17.0.1"
  },
  "devDependencies": {
    "@babel/register": "7.14.5",
    "@form8ion/core": "1.4.2",
    "@istanbuljs/nyc-config-babel": "3.0.0",
    "@pragmatic-divops/commitlint-config": "1.0.5",
    "@pragmatic-divops/eslint-config": "1.0.23",
    "@pragmatic-divops/eslint-config-cucumber": "1.0.0",
    "@pragmatic-divops/eslint-config-mocha": "1.0.1",
    "@pragmatic-divops/remark-preset": "1.0.4",
    "@travi/any": "2.0.17",
    "@travi/babel-preset": "3.0.60",
    "babel-plugin-istanbul": "6.0.0",
    "ban-sensitive-files": "1.9.16",
    "chai": "4.3.4",
    "codecov": "3.8.3",
    "cucumber": "6.0.5",
    "cz-conventional-changelog": "3.3.0",
    "gherkin-lint": "4.2.2",
    "http-status-codes": "2.1.4",
    "husky": "7.0.1",
    "lockfile-lint": "4.6.2",
    "mocha": "9.0.2",
    "mock-fs": "5.0.0",
    "nock": "13.1.1",
    "npm-run-all": "4.1.5",
    "nyc": "15.1.0",
    "remark-cli": "9.0.0",
    "remark-toc": "7.2.0",
    "rimraf": "3.0.2",
    "rollup": "2.53.2",
    "rollup-plugin-auto-external": "2.0.0",
    "rollup-plugin-executable": "1.6.3",
    "rollup-plugin-json": "4.0.0",
    "rollup-plugin-node-resolve": "5.2.0",
    "sinon": "11.1.1",
    "testdouble": "3.16.1"
  }
}
